name: AI Code Review

on:
  # 在 Pull Request 时触发
  pull_request:
    branches:
      - main
      - develop
  
  # 在推送到主分支时触发
  push:
    branches:
      - main

jobs:
  code-review:
    runs-on: ubuntu-latest
    
    steps:
      # 1. 检出代码（重要：获取完整历史）
      - name: Checkout code
        uses: actions/checkout@v3
        with:
          fetch-depth: 0  # 获取完整 Git 历史，用于对比
      
      # 2. 设置 Node.js 环境
      - name: Setup Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '18'
          cache: 'npm'
      
      # 3. 安装依赖
      - name: Install dependencies
        run: npm ci
      
      # 4. 运行代码审查
      - name: Run AI Code Review
        env:
          # OpenAI API 配置（从 GitHub Secrets 读取）
          OPENAI_API_KEY: ${{ secrets.OPENAI_API_KEY }}
          OPENAI_API_URL: ${{ secrets.OPENAI_API_URL }}
          OPENAI_MODEL: claude-3-haiku-20240307
          
          # 代码审查配置
          # PR 场景：对比目标分支
          CODE_REVIEW_BASE_BRANCH: origin/${{ github.base_ref }}
          
          # 或者固定对比 main 分支
          # CODE_REVIEW_BASE_BRANCH: origin/main
          
          # 是否在发现错误时失败（可选）
          # CODE_REVIEW_FAIL_ON_ERROR: false
        run: npm run build:h5
      
      # 5. 上传审查报告
      - name: Upload Code Review Report
        if: always()  # 即使构建失败也上传报告
        uses: actions/upload-artifact@v3
        with:
          name: code-review-report
          path: code-review-report.html
          retention-days: 30
      
      # 6. 评论到 PR（可选）
      - name: Comment PR with Report Summary
        if: github.event_name == 'pull_request'
        uses: actions/github-script@v6
        with:
          script: |
            const fs = require('fs');
            
            // 读取报告文件（如果存在）
            let reportSummary = '代码审查完成！';
            
            try {
              // 这里可以解析 HTML 报告或生成摘要
              reportSummary = '✅ 代码审查完成，请查看 Artifacts 中的详细报告。';
            } catch (error) {
              reportSummary = '⚠️ 代码审查报告生成失败。';
            }
            
            // 评论到 PR
            github.rest.issues.createComment({
              issue_number: context.issue.number,
              owner: context.repo.owner,
              repo: context.repo.repo,
              body: reportSummary
            });
